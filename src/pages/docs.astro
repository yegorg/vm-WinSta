---
import Layout from '@layouts/Layout.astro';
import Button from '@components/ui/Button.astro';
import InnerHero from '@components/sections/InnerHero.astro';
import {
  getBackgroundColor,
  getTextColor,
  getHeadlineColor,
  getEyebrowColor,
} from '@utils/styleUtils';
import Input from '@components/ui/form/Input.astro';
import Textarea from '@components/ui/form/Textarea.astro';
import Select from '@components/ui/form/Select.astro';
import Checkbox from '@components/ui/form/Checkbox.astro';
import Radio from '@components/ui/form/Radio.astro';

const title = 'Dokumenty';
const description = 'Prezent√°cia a PDF';

const heroContent = {
  title: title,
  description: description,
};

const backgrounds = ['base', 'light', 'dark'] as const;
---

<Layout {title} {description}>
  <InnerHero content={heroContent} />
  {/* Content Sections */}
  {
    backgrounds.map((bg) => (
      <div
        data-content={bg}
        class={`${getBackgroundColor(bg)} ${getTextColor(bg)} py-12 ${bg === 'base' ? '' : 'hidden'}`}
      >
        <div class="max-w-4xl mx-auto px-4">
          {/* Links Section */}
          <section id={`links-${bg}`} class="mb-12">
            <h2 class={`text-2xl font-bold mb-6 ${getHeadlineColor(bg)}`}>
              Links
            </h2>
            <div class="space-y-4">
              <p>
                <a
                  href="https://raw.githubusercontent.com/yegorg/vm-WinSta/99e278d87e523a73b6c2a24019579a52e7998556/src/assets/images/home/doc1.pdf"
                  class="text-primary underline hover:no-underline"
                >
                  Outgoing document 1 (PDF)
                </a>
              </p>
              <p>
                <a
                  href="https://raw.githubusercontent.com/yegorg/vm-WinSta/99e278d87e523a73b6c2a24019579a52e7998556/src/assets/images/home/doc2.pdf"
                  class="text-primary underline hover:no-underline"
                >
                  Outgoing document 2 (PDF)
                </a>
              </p>
              <p>
                <a
                  href="https://raw.githubusercontent.com/yegorg/vm-WinSta/99e278d87e523a73b6c2a24019579a52e7998556/src/assets/images/home/iso_9001.pdf"
                  class="text-primary underline hover:no-underline"
                >
                  ISO 9001 certificate (PDF)
                </a>
              </p>
              <p>
                <a
                  href="https://raw.githubusercontent.com/yegorg/vm-WinSta/99e278d87e523a73b6c2a24019579a52e7998556/src/assets/images/home/cert.pdf"
                  class="text-primary underline hover:no-underline"
                >
                  Certificate FSSC 22000 (PDF)
                </a>
              </p>
              <p>
                <a
                  href="https://raw.githubusercontent.com/yegorg/vm-WinSta/99e278d87e523a73b6c2a24019579a52e7998556/src/assets/images/home/Catalogue_KONTI.pdf"
                  class="text-primary underline hover:no-underline"
                >
                  Full Catalogue (PDF)
                </a>
              </p>
            </div>
          </section>
        </div>
      </div>
    ))
  }
</Layout>
